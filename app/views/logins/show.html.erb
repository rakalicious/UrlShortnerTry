
<p>
	<% puts "see this" %>
	<% puts @login.id %>
  <strong>username: <%= @login.username %></strong>
  
</p>

<%= link_to 'Logout', new_login_path %>


<%= form_with scope: :login, url: logins_path, local: true do |form| %>
  <p>
    <%= form.label :full_url %><br>
    <%= form.text_field :long %>

    <% if params[:login] != nil %>
    <% short_label_val = params[:login][:short] %>
    <% else %>
    <% short_label_val = "short_ans" %>
    <% end %>
    <%= form.label "#{short_label_val}" %><br>

    <%= form.hidden_field :username %>
    <%= form.hidden_field :id %>
    <% params[:username] = "" %>
    <% params[:id] = @login.id %>
    

  </p>
  <%= form.submit 'A'%>
 
  <p>
    <%= form.label :short_url %><br>
    <%= form.text_area :short %>
    <%= form.label :long_ans %><br>
  </p>
 
  <p>
    <%= form.submit 'B'%>
  </p>
<% end %>